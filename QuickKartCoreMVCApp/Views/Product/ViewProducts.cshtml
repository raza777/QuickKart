@model IEnumerable<QuickKartCoreMVCApp.Models.Products>

@{
    ViewData["Title"] = "ViewProducts";
    Layout = "_LayoutAdmin";
}

<h2 class="text-center">Products</h2>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
 @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityAvailable)
                </td>
                <td>
                    @Html.ActionLink("Update", "UpdateProduct", new
                    {
                        ProductId = item.ProductId,ProductName = item.ProductName,CategoryId = item.CategoryId,
                        Price =item.Price,QuantityAvailable = item.QuantityAvailable
                    })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
                </td>
            </tr>
        }
    </tbody>
</table>
